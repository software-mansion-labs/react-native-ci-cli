<%
const install = {
  yarn: "yarn install --immutable",
  npm: "npm ci"
}

const run = {
  yarn: `yarn ${(props.isMonorepo) ? `--cwd ${props.pathRelativeToRoot} ` : ""}prettier:check`,
  npm: `npm run prettier:check ${(props.isMonorepo) ? `--prefix ${props.pathRelativeToRoot}` : ""}`
}
%>

name: Prettier check

on:
  pull_request: <%= (props.isMonorepo) ? `
    paths:
      - ${props.pathRelativeToRoot}/**` : "" %>

jobs:
  prettier-check:
    name: Prettier check
    runs-on: ubuntu-latest
    steps:
      - name: 🏗 Setup repo
        uses: actions/checkout@v4

      - name: 🌿 Setup Node
        uses: actions/setup-node@v4
        with:
          node-version-file: '<%= props.nodeVersionFile %>'
          cache: '<%= props.packageManager %>'

      - name: 📦 Install dependencies
        run: <%= install[props.packageManager] %>

      - name: ✨ Run Prettier check
        run: <%= run[props.packageManager] %>
