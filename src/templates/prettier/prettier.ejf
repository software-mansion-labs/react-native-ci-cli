<%
const install = {
  yarn: "yarn",
  npm: "npm install"
}

const run = {
  yarn: `yarn --cwd ${props.pathRelativeToRoot} prettier:check`,
  npm: `npm run prettier:check --prefix ${props.pathRelativeToRoot}`
}
%>

name: Prettier check
on: [pull_request]

jobs:
   prettier-check:
      name: Prettier check
      runs-on: ubuntu-latest
      steps:
         - name: 🏗 Setup repo
           uses: actions/checkout@v4

         - name: 📦 Install dependencies
           run: <%= install[props.packageManager] %>

         - name: ✨ Run Prettier check
           run: <%= run[props.packageManager] %>
