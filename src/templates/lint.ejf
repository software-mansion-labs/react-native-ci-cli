<%
const install = {
  yarn: "yarn",
  npm: "npm install"
}

const run = {
  yarn: `yarn --cwd ${props.pathRelativeToRoot} lint`,
  npm: `npm run lint --prefix ${props.pathRelativeToRoot}`
}
%>

name: Check ESLint
on: [pull_request]

jobs:
   test:
      name: ESLint
      runs-on: ubuntu-latest
      steps:
         - name: 🏗 Setup repo
           uses: actions/checkout@v4

         - name: 📦 Install dependencies
           run: <%= install[props.packageManager] %>

         - name: 🤓 Run ESLint
           run: <%= run[props.packageManager] %>
